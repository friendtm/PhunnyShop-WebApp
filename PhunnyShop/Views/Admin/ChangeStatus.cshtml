@model PhunnyShop.Models.EquipmentViews.EditRepairStatusView

@{
    ViewData["Title"] = "Change Status";
}

<h2>Change Status for Repair #@Model.Id</h2>

<form asp-action="ChangeStatus" method="post">

    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="CurrentStatus">Current Status</label>

        @Html.DropDownListFor(m => m.CurrentStatus, Model.StatusOptions, "Select Status", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CurrentStatus)
    </div>

    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-primary">Save</button>
</form>