@model Category

<form method="POST">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Category</h2>
			<hr />
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="DisplayOrder"></label>
			<input asp-for="DisplayOrder" class="form-control" />
		</div>
		<div class="row">
			<div class="col-6 col-md-3">  <!-- Se o ecrão for menor que 'Medium' ele assume 6 Colunas (col-6) -->
				<button type="submit" class="btn btn-outline-primary form-control">Create</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Category" asp-action="Index" class="btn btn-outline-danger form-control">Return</a>
			</div>
		</div>
	</div>
</form>